<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <data noupdate="1">
        <record id="sample" model="ir.ui.view">
            <field name="name">Sample</field>
            <field name="type">qweb</field>
            <field name="key">website.sample</field>
            <field name="arch" type="xml">
                <t name="Sample" priority="40" t-name="website.sample">
                    <t t-call="website.layout">
                        <t t-set="pageName" t-value="'sample'"/>
                        <h1>Sample page!</h1>
                        <div id="wrap" class="oe_structure oe_empty"/>
                    </t>
                </t>
            </field>
        </record>
    </data>

    <data>
        <record id="sample_page" model="website.page">
            <field name="is_published">True</field>
            <field name="url">/produkte/sample</field>
            <field name="view_id" ref="sample"/>
            <field name="track">True</field>
            <field name="website_id" ref="website.default_website"/>
        </record>
    </data>

    <!--Menu items-->
    <data>
        <record id="produkte_submenu" model="website.menu">
            <field name="name">Produkte</field>
            <field name="parent_id" ref="theme_biovum.main"/>
            <field name="sequence" type="int">20</field>
        </record>

        <record id="frischeier_link" model="website.menu">
            <field name="name">Frischeier</field>
            <field name="url">/produkte/frischeier</field>
            <field name="parent_id" ref="theme_biovum.produkte_submenu"/>
            <field name="sequence" type="int">21</field>
        </record>

        <record id="sample_link" model="website.menu">
            <field name="name">Sample</field>
            <field name="url">/produkte/sample</field>
            <field name="parent_id" ref="theme_biovum.produkte_submenu"/>
            <field name="sequence" type="int">29</field>
        </record>
    </data>


</odoo>