<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <data noupdate="1">
        <record id="geschichte_template" model="ir.ui.view">
            <field name="name">Geschichte</field>
            <field name="type">qweb</field>
            <field name="key">website.geschichte</field>
            <field name="arch" type="xml">
                <t name="Geschichte" t-name="website.geschichte">
                    <t t-call="website.layout">
                        <t t-set="pageName" t-value="'geschichte'"/>
                        <div id="wrap" class="oe_structure oe_empty">
                            <section class="s_text_block pt32 pb32"
                                     data-name="Text block">
                                <div class="container">
                                    <div class="row">
                                        <div class="pt32 pb32 col-lg-9">
                                            <p class="lead">
                                                <font style="color: rgb(57, 123, 33);">
                                                    <b>
                                                        <b>Geschichte</b>
                                                    </b>
                                                </font>
                                                <br/>
                                            </p>
                                            <p style="text-align: justify;">Die
                                                Biovum GmbH ist im Jahr 2006 auf
                                                dem
                                                Eggerhof in Salgen entstanden.
                                                Gegründet wurde diese von
                                                Philipp
                                                Egger und der Hosberg AG.</p>
                                            <p style="text-align: justify;">Der
                                                Eggerhof ist schon seit 1979
                                                Mitglied beim Bioland-Verband.
                                                Der
                                                Betrieb sowie auch die Biovum
                                                GmbH
                                                wirtschaften auch heute noch
                                                nach
                                                ökologischen Grundsätzen und
                                                sind
                                                Mitglied im Bioland-Verband.</p>
                                            <p style="text-align: justify;">1999
                                                begannen die Eggers Ihren
                                                Betrieb
                                                mit Milchviehaltung Getreide und
                                                Gemüsebau zu erweitern. Hierzu
                                                wurde
                                                eine Stallung für Bio-Legehennen
                                                errichtet und bezogen. Auch hier
                                                galt die Prämisse „artgerechte
                                                Tierhaltung nach ökologischen
                                                Grundsätzen“.</p>
                                            <p style="text-align: justify;">
                                                2005-2006 Errichtung eines
                                                weiteren
                                                Legehennenstalls und Gründung
                                                der
                                                Biovum GmbH</p>
                                            <p style="text-align: justify;">
                                                2006-2010 Gewinnung von
                                                verschiedenen
                                                Bio-Legehennenhaltern
                                                zur Erweiterung der
                                                Vermarktung.</p>
                                            <p style="text-align: justify;">
                                                Heute
                                                ist die Biovum GmbH ein
                                                wichtiger
                                                Vermarkter für Bioland-Eier und
                                                Bioland-Flüssigeiprodukte.
                                                Getreu
                                                unserer Überzeugung vermarkten
                                                wir
                                                ausschließlich qualitativ
                                                hochwertige Bio Produkte aus
                                                tiergerechter Produktion. Wir
                                                versuchen unserer Aufgabe als
                                                Bindeglied zwischen
                                                Legehennenhalter
                                                und Kunde gerecht zu werden.
                                                Hierzu
                                                versuchen wir für unsere
                                                Vertragsbetriebe einen fairen
                                                Preis
                                                umzusetzen, sodaß es möglich ist
                                                ein
                                                gutes tiergerechtes,
                                                ökologisches
                                                Premiumprodukt zu erzeugen. Der
                                                Kunde hingegen profitiert von
                                                unserer langfristigen und
                                                konstanten
                                                Preisstrategie sowie natürlich
                                                auch
                                                von unseren qualitativ
                                                hochstehenden
                                                Produkten, für welche wir
                                                natürliche
                                                eine lückelose
                                                Rückverfolgbarkeit
                                                garantieren.</p>
                                            <div>
                                                <br/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </t>
                </t>
            </field>
        </record>

        <record id="philosphie_template" model="ir.ui.view">
            <field name="name">Philosphie</field>
            <field name="type">qweb</field>
            <field name="key">website.philosphie</field>
            <field name="arch" type="xml">
                <t name="Philosphie" t-name="website.philosphie">
                    <t t-call="website.layout">
                        <t t-set="pageName" t-value="'philosphie'"/>
                        <div id="wrap" class="oe_structure oe_empty">
                            <section class="pt32 pb0" data-name="Title">
                                <div class="container">
                                    <div class="row s_nb_column_fixed">
                                        <div class="s_title pt16 pb0 col-lg-8" style="text-align: center;">
                                            <h1 class="s_title_default" style="text-align: left; ">
                                                <font style="color: rgb(57, 123, 33); font-size: 24px;">
                                                    <b>Philosophie</b>
                                                </font>
                                            </h1>
                                        </div>
                                    </div>
                                </div>
                            </section>
                            <section class="s_text_block pt32 pb0" data-name="Text block">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-8 pt0 pb0">
                                            <p class="lead">
                                                <font style="color: rgb(57, 123, 33);">
                                                    <b>
                                                        <b>Sicherheit</b>
                                                    </b>
                                                </font>
                                                <br/>
                                            </p>
                                            <p>Die Qualität unserer Produkte und
                                                die
                                                Sensibilität des Marktes
                                                verlangen
                                                eine Vertriebsorganisation, bei
                                                der
                                                eine Vermischung von
                                                konventionellen
                                                Eiern und Bio-Eiern nicht
                                                möglich
                                                ist. Die Biovum GmbH verarbeitet
                                                deshalb seit ihrer Gründung
                                                ausschließlich biologisch
                                                hergestellte Eier. Alle Eier
                                                werden
                                                auf dem Bauernhof geprintet und
                                                der
                                                Weg vom Landwirt bis zum Käufer
                                                wird
                                                in unserem
                                                Warenwirtschaftssystem
                                                dokumentiert. Dieses
                                                Rückverfolgbarkeitssystem
                                                erlaubt
                                                uns, in kürzester Zeit auf
                                                Probleme
                                                zu reagieren und bietet somit
                                                einen
                                                optimalen Schutz für unsere
                                                Kunden
                                                und den Konsumenten.<br/></p>
                                        </div>
                                    </div>
                                </div>
                            </section>
                            <section class="s_text_block pb0 pt0" data-name="Text block">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-8 pt0 pb0">
                                            <p class="lead">
                                                <b>
                                                    <font style="color: rgb(57, 123, 33);">
                                                        <b>Qualität</b>
                                                    </font>
                                                </b>
                                                <br/>
                                            </p>
                                            <p>Unser Ziel ist ein möglichst
                                                hohes
                                                Qualitätsniveau auf allen Stufen
                                                der
                                                Wertschöpfungskette zu
                                                erreichen. Um
                                                diesem Anspruch gerecht zu
                                                werden,
                                                haben wir ein zertifiziertes
                                                Qualitätsmanagementsystem
                                                aufgebaut:
                                                Sämtliche Arbeitsschritte werden
                                                laufend kontrolliert, bewertet
                                                und
                                                gegebenenfalls angepasst. Dieses
                                                Qualitätsmanagementsystem
                                                entspricht
                                                den Richtlinien der ISO 9001
                                                sowie
                                                dem IFS (International Food
                                                Standard). Wir sind in der Lage,
                                                sowohl kleine Abnehmer als auch
                                                große Kunden mit unseren
                                                Produkten
                                                zu beliefern. Unsere Produkte
                                                sind
                                                in diversen Verpackungsgrößen
                                                erhältlich, um kundenspezifische
                                                Anforderungen optimal zu
                                                erfüllen.<br/></p>
                                        </div>
                                    </div>
                                </div>
                            </section>
                            <section class="s_text_block pt0 pb56" data-name="Text block">
                                <div class="container">
                                    <div class="row">
                                        <div class="pt0 col-lg-8 pb0">
                                            <p class="lead">
                                                <b>
                                                    <font style="color: rgb(57, 123, 33);">
                                                        <b>Erfahrung</b>
                                                    </font>
                                                </b>
                                                <br/>
                                            </p>
                                            <p>Die Biovum GmbH verfügt über
                                                langjährige Erfahrung in der
                                                Produktion und Vermarktung von
                                                Bio-Eiern und Bio-Ei-Produkten.
                                                Diese fließt ständig in unsere
                                                Prozesse ein und hilft, diese zu
                                                optimieren. Außerdem können wir
                                                unsere Erzeuger optimal in der
                                                Geflügelhaltung unterstützen und
                                                so
                                                gewährleisten, dass unsere Eier
                                                die
                                                bestmögliche Qualität
                                                erreichen.<br/></p>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </t>
                </t>
            </field>
        </record>
    </data>

    <data>
        <record id="geschichte_page" model="website.page">
            <field name="is_published">True</field>
            <field name="url">/ueber_uns/geschichte</field>
            <field name="view_id" ref="geschichte_template"/>
            <field name="track">True</field>
            <field name="website_id" ref="website.default_website"/>
        </record>

        <record id="philosphie_page" model="website.page">
            <field name="is_published">True</field>
            <field name="url">/ueber_uns/philosphie</field>
            <field name="view_id" ref="philosphie_template"/>
            <field name="track">True</field>
            <field name="website_id" ref="website.default_website"/>
        </record>
    </data>

    <!--Menu items-->
    <data>
        <record id="uber_uns_submenu" model="website.menu">
            <field name="name">Uber uns</field>
            <field name="parent_id" ref="theme_biovum.main"/>
            <field name="sequence" type="int">40</field>
        </record>

        <record id="geschichte_link" model="website.menu">
            <field name="name">Geschichte</field>
            <field name="url">/ueber_uns/geschichte</field>
            <field name="parent_id" ref="theme_biovum.uber_uns_submenu"/>
            <field name="sequence" type="int">41</field>
        </record>

        <record id="philosophie_link" model="website.menu">
            <field name="name">Philosphie</field>
            <field name="url">/ueber_uns/philosphie</field>
            <field name="parent_id" ref="theme_biovum.uber_uns_submenu"/>
            <field name="sequence" type="int">42</field>
        </record>
    </data>

</odoo>