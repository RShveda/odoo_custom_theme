<?xml version="1.0" encoding="utf-8" ?>
<odoo>


<!-- === Home Page ===-->
    <record id="homepage" model="website.page">
        <field name="name">Homepage</field>
        <field name="website_published">True</field>
        <field name="url">/</field>
        <field name="type">qweb</field>
        <field name="key">theme_biovum.homepage</field>
        <field name="arch" type="xml">
            <t t-name="theme_biovum.homepage_template">
                <t t-call="theme_biovum.theme_biovum_layout">
                    <t t-set="pageName" t-value="'homepage'"/>
                    <t t-set="var" t-value="'Some menu'"/>
                    <div id="wrap">
                        <!--Content goes here-->

                        <!-- === Snippets' area === -->
                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
        </field>
    </record>

    <!--Main menu-->
    <record id="main" model="website.menu">
        <field name="name">Main</field>
        <field name="sequence" type="int">10</field>
    </record>

</odoo>